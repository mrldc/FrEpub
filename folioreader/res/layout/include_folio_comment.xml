<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center">


    <ImageView
        android:id="@+id/iv_idea"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_bottom_bar_comment" />

    <EditText
        android:id="@+id/et_page_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_idea"
        android:layout_toStartOf="@+id/tv_page_note_save"
        android:layout_centerVertical="true"
        android:hint="写下这一刻的想法..."
        android:background="@null"
        android:textColorHint="#999999"
        android:inputType="text"
        android:textSize="17sp"
        android:textColor="#333333"
        android:gravity="start"
        android:maxLines="5"
        />

    <TextView
        android:id="@+id/tv_page_note_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"

        android:paddingHorizontal="12dp"
        android:textSize="17sp"
        android:textColor="#dd4f0f"
        android:text="保存"
        android:visibility="visible"
        />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_below="@+id/iv_idea"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_highlight_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="6dp"
        >
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#999999"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            />

        <TextView
            android:id="@+id/tv_mark_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/view"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="17sp"
            android:textColor="#999999"
            android:text="此前各书均有序，或自序，或他序，四书此次汇集重刊，她又逐一修订一过，但尚缺一篇总序，她希望这篇总序由我来执笔，以冠群书。" />
    </RelativeLayout>
</LinearLayout>