<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#ffffff"
    tools:visibility="visible">
    <RelativeLayout
        android:id="@+id/rl_top_content"
        android:layout_marginTop="27dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:visibility="visible">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@mipmap/ic_back_black" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_back"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="#2C2C2C"
        android:text="0字" />
        <LinearLayout
            android:id="@+id/ll_listen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="7dp"
            android:background="@drawable/shape_30_stroke_dash_bg"
            android:layout_toStartOf="@+id/ll_video"
            >
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/iv_listening" />

            <TextView
                android:id="@+id/tv_listen_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="去听书" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="7dp"
            android:background="@drawable/shape_30_stroke_dash_bg"
            android:layout_toStartOf="@+id/ll_collect"
            >
            <ImageView
                android:layout_width="13dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/iv_videos" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="看视频" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="28dp"
        android:paddingVertical="7dp"
        android:background="@drawable/shape_30_stroke_dd4f0f_bg"
        >
    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@mipmap/read_collect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="13sp"
        android:textColor="#dd4f0f"
        android:text="收藏" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>