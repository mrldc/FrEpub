<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#ffffff"
    tools:visibility="visible">
    <View
    android:id="@+id/view_line"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#f1f1f1"
    android:layout_below="@+id/iv_idea"/>
    <com.litao.slider.NiftySlider
        android:id="@+id/ns_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:padding="5dp"
        android:valueFrom="0"
        android:valueTo="10000"
        android:value="0"
        app:tipViewVisible="false"
        app:enableDrawHalo="false"
        app:trackHeight="10dp"
        app:trackColor="@color/active_progress_color"
        app:thumbColor="@color/progress_thumb_color"
        app:thumbShadowColor="@android:color/transparent"
        app:tipViewBackground="@color/active_progress_color"
        app:thumbTextColor="@color/progress_text_color"
        app:thumbRadius="5dp"
        app:thumbTextSize="8sp"
        app:thumbText="0.00%"
        app:trackCornersRadius="3dp"
        app:thumbWidth="41dp"
        app:thumbHeight="18dp"
        app:thumbWithinTrackBounds="true"
        app:isTipViewClippingEnabled ="false"
        >

    </com.litao.slider.NiftySlider>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >
        <LinearLayout
            android:id="@+id/ll_directory"
            android:layout_width="wrap_content"
            android:paddingVertical="16dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_directory"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_directory" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_write"
            android:layout_width="wrap_content"
            android:paddingVertical="16dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_write"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_write" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_light"
            android:layout_width="wrap_content"
            android:paddingVertical="16dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_light" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_font"
            android:layout_width="wrap_content"
            android:paddingVertical="16dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_font"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_font" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>