<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:layout_gravity="bottom">

    <RelativeLayout
        android:id="@+id/ll_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        >

        <SeekBar
            android:id="@+id/seekbar_light"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:progress="20"
            style="@style/CustomSeekbarStyle"
            android:max="4" />
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/ic_light_seekbar" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:src="@mipmap/ic_light_seekbar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingVertical="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/iv_light_1"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_highlight_gray"
             />
        <View
            android:id="@+id/iv_light_2"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_highlight_white"
            />
        <View
            android:id="@+id/iv_light_3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_highlight_3"
            />
        <View
            android:id="@+id/iv_light_4"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_highlight_4"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F2F2F2"
        />
</LinearLayout>
